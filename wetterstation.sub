###SAPI
function SAPI()
{
  #1 Single / Bulk
  #2 SAPI-URL
  #3 DATA (setBulk)

  SEP="?"
  [[ $2 == *"?"* ]] && SEP="&"

  if [ "$1" == "Single" ]; then
   retval=$(curl ${SAPI_CURL_OPTS} -s "${WEB}://${IPP}/${2}${SEP}user=${AUTH_USER}&pass=${AUTH_PASS}" 2>/dev/null)
  fi

  if [ "$1" == "Bulk" ]; then
   curl ${SAPI_CURL_OPTS} --data "${3}" "${WEB}://${IPP}/${2}${SEP}user=${AUTH_USER}&pass=${AUTH_PASS}" >/dev/null 2>&1
  fi
}


