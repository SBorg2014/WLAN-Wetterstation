        local IFS=","
        local TDATA=(${TMP_REGEN[*]})
        MET_REGEN=$(echo ${TDATA[14]} | tr -cd [:digit:]\.)

        if [ -z "${MET_REGEN}" ]; then
          SAPI "Single" "set/${DP_MET_SOMMER_REGEN}?value=999.9&ack=true"
         else
